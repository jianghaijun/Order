<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/gray_stroke_white_solid_bg"
    android:orientation="vertical"
    android:padding="@dimen/two_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/touch_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:minHeight="@dimen/forty"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtShipName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left|center"
                android:maxLines="1"
                android:paddingLeft="@dimen/five_dp"
                android:textColor="@color/black"
                android:textSize="@dimen/fourteen_sp" />

            <TextView
                android:id="@+id/txtSearch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:background="@drawable/btn_white"
                android:gravity="center"
                android:paddingLeft="@dimen/ten_dp"
                android:paddingRight="@dimen/ten_dp"
                android:text="@string/view_the_process"
                android:textColor="@color/main_check_bg"
                android:textSize="@dimen/fourteen_sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtEstimatedBerthingDate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/thirty"
            android:ellipsize="end"
            android:gravity="left|center"
            android:maxLines="1"
            android:paddingLeft="@dimen/five_dp"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_sp" />

        <TextView
            android:id="@+id/txtActualBerthingDate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/thirty"
            android:ellipsize="end"
            android:gravity="left|center"
            android:maxLines="1"
            android:paddingLeft="@dimen/five_dp"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/thirty"
            android:background="@null"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtPortOfDestination"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left|center"
                android:maxLines="1"
                android:paddingLeft="@dimen/five_dp"
                android:textColor="@color/black"
                android:textSize="@dimen/fourteen_sp" />

            <TextView
                android:id="@+id/txtBoxNum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left|center"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/fourteen_sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>