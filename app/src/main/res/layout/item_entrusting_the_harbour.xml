<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/gray_stroke_white_solid_bg"
    android:orientation="vertical"
    android:padding="@dimen/two_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        android:background="@drawable/touch_bg"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbBillLadingNo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|center"
            android:maxLines="1"
            android:textColor="@color/dark_b"
            android:textSize="@dimen/fourteen_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        android:background="@drawable/touch_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtEnglishShipName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|center"
            android:maxLines="1"
            android:paddingLeft="@dimen/ten_dp"
            android:textColor="@color/dark_b"
            android:textSize="@dimen/fourteen_sp" />

        <TextView
            android:id="@+id/txtImportVoyage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|center"
            android:maxLines="1"
            android:paddingLeft="@dimen/ten_dp"
            android:paddingRight="@dimen/ten_dp"
            android:textColor="@color/dark_b"
            android:textSize="@dimen/fourteen_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        android:background="@drawable/touch_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtBoxNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|center"
            android:maxLines="1"
            android:paddingLeft="@dimen/ten_dp"
            android:textColor="@color/dark_b"
            android:textSize="@dimen/fourteen_sp" />

        <TextView
            android:id="@+id/txtBoxType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|center"
            android:maxLines="1"
            android:paddingLeft="@dimen/ten_dp"
            android:paddingRight="@dimen/ten_dp"
            android:textColor="@color/dark_b"
            android:textSize="@dimen/fourteen_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        android:background="@drawable/touch_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtBoxSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|center"
            android:maxLines="1"
            android:paddingLeft="@dimen/ten_dp"
            android:textColor="@color/dark_b"
            android:textSize="@dimen/fourteen_sp" />

        <TextView
            android:id="@+id/txtHarbourDredge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|center"
            android:maxLines="1"
            android:paddingLeft="@dimen/ten_dp"
            android:paddingRight="@dimen/ten_dp"
            android:textColor="@color/dark_b"
            android:textSize="@dimen/fourteen_sp" />
    </LinearLayout>
</LinearLayout>