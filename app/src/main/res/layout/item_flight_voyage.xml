<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/gray_stroke_white_solid_bg"
    android:orientation="vertical"
    android:padding="@dimen/two_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/touch_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:minHeight="@dimen/thirty"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBillOfLadingNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/five_dp"
                android:text="@string/bill_of_lading_num"
                android:textColor="@color/black"
                android:textSize="@dimen/fourteen_sp" />

            <TextView
                android:id="@+id/txtBillOfLadingNumContext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:textColor="@color/main_check_bg"
                android:textSize="@dimen/fourteen_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/thirty"
            android:background="@null"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBillStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left|center"
                android:maxLines="1"
                android:paddingLeft="@dimen/five_dp"
                android:textColor="@color/black"
                android:textSize="@dimen/fourteen_sp" />

            <TextView
                android:id="@+id/txtDeclareStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left|center"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/fourteen_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/thirty"
            android:background="@null"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtInspectionStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left|center"
                android:maxLines="1"
                android:paddingLeft="@dimen/five_dp"
                android:textColor="@color/black"
                android:textSize="@dimen/fourteen_sp" />

            <TextView
                android:id="@+id/txtBoxNum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left|center"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/fourteen_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/thirty"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:background="@null"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnClearanceStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_weight="1"
                android:background="@drawable/btn_white"
                android:text="@string/clearance_status"
                android:textColor="@color/main_check_bg"
                android:textSize="@dimen/fourteen_sp" />

            <Button
                android:id="@+id/btnInspection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:layout_weight="1"
                android:background="@drawable/btn_white"
                android:text="@string/inspection"
                android:textColor="@color/main_check_bg"
                android:textSize="@dimen/fourteen_sp" />

            <Button
                android:id="@+id/btnBoxStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_weight="1"
                android:background="@drawable/btn_white"
                android:text="@string/box_status"
                android:textColor="@color/main_check_bg"
                android:textSize="@dimen/fourteen_sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>