<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/actionBar"
        layout="@layout/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_dp"
        android:layout_alignParentTop="true"
        app:layout_heightPercent="8%" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llBottom"
        android:layout_below="@+id/actionBar"
        android:background="@null"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gray_stroke_white_solid_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:background="@null"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/ten_dp"
                    android:text="集装箱号：ASDF5454ASDF"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fourteen_sp" />

                <TextView
                    android:id="@+id/txtStart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/ten_dp"
                    android:paddingRight="@dimen/ten_dp"
                    android:text="未到港"
                    android:textColor="@color/main_bg"
                    android:textSize="@dimen/fourteen_sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginLeft="@dimen/one_dp"
                android:layout_marginRight="@dimen/one_dp"
                android:background="@color/main_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:background="@null"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCommodityName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:minHeight="@dimen/thirty"
                    android:paddingLeft="@dimen/ten_dp"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/fourteen_sp" />

                <TextView
                    android:id="@+id/txtOrderNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:minHeight="@dimen/thirty"
                    android:paddingLeft="@dimen/ten_dp"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/fourteen_sp" />

                <TextView
                    android:id="@+id/txtBillNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:minHeight="@dimen/thirty"
                    android:paddingLeft="@dimen/ten_dp"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/fourteen_sp" />

                <TextView
                    android:id="@+id/txtBillType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:minHeight="@dimen/thirty"
                    android:paddingLeft="@dimen/ten_dp"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/fourteen_sp" />

                <TextView
                    android:id="@+id/txtPortTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:minHeight="@dimen/thirty"
                    android:paddingLeft="@dimen/ten_dp"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/fourteen_sp" />

                <TextView
                    android:id="@+id/txtShipName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:minHeight="@dimen/thirty"
                    android:paddingLeft="@dimen/ten_dp"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/fourteen_sp" />

                <TextView
                    android:id="@+id/txtDestination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:minHeight="@dimen/thirty"
                    android:paddingLeft="@dimen/ten_dp"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/fourteen_sp" />

                <TextView
                    android:id="@+id/txtInvoiceNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:minHeight="@dimen/thirty"
                    android:paddingLeft="@dimen/ten_dp"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/fourteen_sp" />

                <TextView
                    android:id="@+id/txtAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:minHeight="@dimen/thirty"
                    android:paddingLeft="@dimen/ten_dp"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/fourteen_sp" />

                <TextView
                    android:id="@+id/txtSupplier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:minHeight="@dimen/thirty"
                    android:paddingLeft="@dimen/ten_dp"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/fourteen_sp" />

                <TextView
                    android:id="@+id/txtForwardingCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:minHeight="@dimen/thirty"
                    android:paddingLeft="@dimen/ten_dp"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/fourteen_sp" />

                <TextView
                    android:id="@+id/txtConsignee"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/ten_dp"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/fourteen_sp" />

                <TextView
                    android:id="@+id/txtShipCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:minHeight="@dimen/thirty"
                    android:paddingLeft="@dimen/ten_dp"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/fourteen_sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/seven_point_five_dp"
        android:paddingTop="@dimen/seven_point_five_dp">

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:layout_weight="1"
            android:background="@drawable/btn_white"
            android:gravity="center"
            android:text="@string/box_info"
            android:textColor="@color/main_bg"
            android:textSize="@dimen/fourteen_sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:layout_weight="1"
            android:background="@drawable/btn_white"
            android:gravity="center"
            android:text="@string/quarantine_delivery"
            android:textColor="@color/main_bg"
            android:textSize="@dimen/fourteen_sp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:layout_weight="1"
            android:background="@drawable/btn_white"
            android:gravity="center"
            android:text="@string/declaration_declaration"
            android:textColor="@color/main_bg"
            android:textSize="@dimen/fourteen_sp" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:layout_weight="1"
            android:background="@drawable/btn_white"
            android:gravity="center"
            android:text="@string/state_of_documents"
            android:textColor="@color/main_bg"
            android:textSize="@dimen/fourteen_sp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:layout_weight="1"
            android:background="@drawable/btn_white"
            android:gravity="center"
            android:text="@string/freight_details"
            android:textColor="@color/main_bg"
            android:textSize="@dimen/fourteen_sp" />
    </LinearLayout>


</com.zhy.android.percent.support.PercentRelativeLayout>
