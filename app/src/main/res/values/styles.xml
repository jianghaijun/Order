<resources>


    <!-- 设置所有Activity都不显示ActionBar 以及进入和退出效果 -->
    <style name="Anim_fade" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/fade</item>
    </style>
    <!-- 设置所有Activity进入和退出效果 -->
    <style name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <!--自定义dialog样式-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <!-- 有无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/white</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!--无标题 -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 自定义的Dialog进出动画 中间弹窗 -->
    <style name="DialogInAndOutAnim">
        <item name="android:windowEnterAnimation">@anim/dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_anim</item>
    </style>

    <!-- 自定义的Dialog进出动画 中间弹窗 -->
    <style name="DialogInAndOutBottom">
        <item name="android:windowEnterAnimation">@anim/dialog_in_bottom_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_bottom_anim</item>
    </style>

    <style name="TitleTextAppearance" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">@dimen/twenty_sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
